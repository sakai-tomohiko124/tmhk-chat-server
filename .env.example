# TMHKchat Environment Configuration
# コピーして .env として保存してください: cp .env.example .env

# === セキュリティ設定 ===
# 本番環境では必ず変更してください！
SECRET_KEY=tmhk-chat-secret-key-change-this-in-production
ENCRYPTION_KEY=your-32-byte-encryption-key-here

# === Flask設定 ===
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_APP=app.py

# === データベース設定 ===
DATABASE_PATH=chat.db

# === Redis設定 ===
# Redisを使用する場合は以下を設定
REDIS_URL=redis://localhost:6379
# Redisを使用しない場合はコメントアウト
# REDIS_ENABLED=False

# === OpenAI API設定 ===
# OpenAI APIキーを https://platform.openai.com/api-keys から取得
OPENAI_API_KEY=sk-your-openai-api-key-here
# OpenAI APIを使用しない場合はコメントアウト
# OPENAI_ENABLED=False

# === Google Gemini API設定 ===
# Google AI Studio で取得: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here
# Gemini APIを使用しない場合はコメントアウト
# GEMINI_ENABLED=False

# === サーバー設定 ===
FLASK_SECRET_KEY=change-me
PORT=5000
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=86400  # 24時間（秒単位）

# === ログ設定 ===
LOG_LEVEL=INFO
LOG_FILE=logs/tmhk-chat.log

# === 外部API設定 ===
# 天気情報API（気象庁）
WEATHER_API_ENABLED=True

# 鉄道運行情報API
TRAIN_API_ENABLED=True

# === 機能フラグ ===
# 各機能の有効/無効を切り替え
ENABLE_AI_CHAT=True
ENABLE_GAMES=True
ENABLE_ACHIEVEMENTS=True
ENABLE_FILE_UPLOAD=True
ENABLE_ENCRYPTION=True

# === 開発者モード ===
# デバッグ情報の表示
DEV_MODE=True
SHOW_SQL_QUERIES=False

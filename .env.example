# ===========================================
# ARE - 環境変数設定テンプレート
# ===========================================
# このファイルを .env にコピーして使用してください
# $ cp .env.example .env

# ----- Flask 設定 -----
FLASK_APP=wsgi.py
FLASK_ENV=development  # development | production
SECRET_KEY=your-secret-key-change-this-in-production
DEBUG=True

# ----- データベース設定 -----
# 開発環境（SQLite）
DATABASE_URL=sqlite:///are_dev.db

# 本番環境（PostgreSQL - AWS RDS）
# DATABASE_URL=postgresql://username:password@host:5432/are_production

# Render.com環境（自動設定）
# DATABASE_URL は Render が自動で設定

# ----- Redis 設定 -----
REDIS_URL=redis://localhost:6379/0

# ----- JWT 認証設定 -----
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ACCESS_TOKEN_EXPIRES=3600  # 1時間
JWT_REFRESH_TOKEN_EXPIRES=2592000  # 30日

# ----- AWS 設定 -----
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=ap-northeast-1
AWS_S3_BUCKET=are-media-storage
AWS_CLOUDFRONT_DOMAIN=your-cloudfront-domain.cloudfront.net

# ----- Supabase 設定 -----
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key
SUPABASE_STORAGE_BUCKET=are-media

# ----- Agora.io 設定（通話機能） -----
AGORA_APP_ID=your-agora-app-id
AGORA_APP_CERTIFICATE=your-agora-app-certificate

# ----- Grok API 設定（AI機能） -----
GROK_API_KEY=your-grok-api-key
GROK_API_BASE_URL=https://api.x.ai/v1

# ----- Celery 設定 -----
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ----- CORS 設定 -----
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
ALLOWED_HOSTS=localhost,127.0.0.1

# ----- ファイルアップロード設定 -----
MAX_CONTENT_LENGTH=52428800  # 50MB
UPLOAD_FOLDER=uploads
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,mp4,mov,avi,mp3,wav,pdf,doc,docx,xls,xlsx

# ----- セキュリティ設定 -----
BCRYPT_LOG_ROUNDS=12
SESSION_COOKIE_SECURE=False  # 本番環境では True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# ----- ログ設定 -----
LOG_LEVEL=INFO  # DEBUG | INFO | WARNING | ERROR | CRITICAL
LOG_FILE=logs/are.log

# ----- 通知設定 -----
NOTIFICATION_ENABLED=True
EMAIL_ENABLED=False

# ----- レート制限 -----
RATELIMIT_ENABLED=True
RATELIMIT_DEFAULT=100 per hour

# ----- 監視設定（オプション） -----
SENTRY_DSN=your-sentry-dsn-url
SENTRY_ENVIRONMENT=development

# ----- その他 -----
TIMEZONE=Asia/Tokyo
LANGUAGE=ja
